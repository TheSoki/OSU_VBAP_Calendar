// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  account       Account?
}

model Account {
  id            String   @id @default(uuid())
  refreshToken  String?
  password      String
  userId        String @unique 
  user          User   @relation(fields: [userId], references: [id])   
}